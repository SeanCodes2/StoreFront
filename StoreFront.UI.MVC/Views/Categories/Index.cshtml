@model IEnumerable<StoreFront.DATA.EF.Models.Category>

@{
    ViewData["Title"] = "Index";
}
@section NavBarClass {
    <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 1;">
    }


        <div class="row">
            <div class="col-8 offset-2">
                <h1>Categories</h1>

                <p>
                    <a asp-action="Create" class="btn btn-warning">Add New Category</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                            @Html.DisplayNameFor(model => model.CategoryDescription)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.CategoryId">@Html.DisplayFor(modelItem => item.CategoryName)</a>

                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.CategoryDescription)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |

                                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                            </td>
                        </tr>
                }
                </tbody>
            </table>
        </div>
    </div>


