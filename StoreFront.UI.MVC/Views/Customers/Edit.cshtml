@model StoreFront.DATA.EF.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

        <div class="row">
            <div class="col-8 offset-2">
                <h1>Modify @Model.ShipToName</h1>

                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CustomerId" />
                            <div class="form-group">
                                <label asp-for="ShipToName" class="control-label"></label>
                                <input asp-for="ShipToName" class="form-control" />
                                <span asp-validation-for="ShipToName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShipToCity" class="control-label"></label>
                                <input asp-for="ShipToCity" class="form-control" />
                                <span asp-validation-for="ShipToCity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShipToState" class="control-label"></label>
                                <input asp-for="ShipToState" class="form-control" />
                                <span asp-validation-for="ShipToState" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShipToZip" class="control-label"></label>
                                <input asp-for="ShipToZip" class="form-control" />
                                <span asp-validation-for="ShipToZip" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserId" class="control-label"></label>
                                <input asp-for="UserId" class="form-control" />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-warning" />
                                <a asp-action="Index" class="btn btn-info ml-3">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
