
@{
    ViewData["Title"] = "Email Confirmation";
}

<h1>Email Sent!</h1>


<div class="row">
    <div class="col-lg-12">
        <div class="info-box">
            <i class="bx bx-check-circle"></i>
            
            <p>
                Thank you for contacting us! We will respond to your message using
                the provided email address: @Model.Email in the next 1-3 business days.
            </p>
            <br />
            <div class="offset-3 col-md-6 text-center">
                <p>
                    You sent the following message on
                    @DateTime.Now.Date.ToShortDateString() at
                    @DateTime.Now.ToShortTimeString() :
                </p>
            </div>
            <br />
            <div class="offset-3 col-md-6">
                <p>
                    <em>@Model.Message</em>
                </p>
            </div>
        </div>
    </div>
</div>