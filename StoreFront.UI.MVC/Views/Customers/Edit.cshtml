@model StoreFront.DATA.EF.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-8 offset-2">

        <h1>Modify @Model.ShipToFirstName @Model.ShipToLastName</h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerId" />
                    <div class="form-group">
                        <label asp-for="ShipToFirstName" class="control-label"></label>
                        <input asp-for="ShipToFirstName" class="form-control" />
                        <span asp-validation-for="ShipToFirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipToLastName" class="control-label"></label>
                        <input asp-for="ShipToLastName" class="form-control" />
                        <span asp-validation-for="ShipToLastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipToCity" class="control-label"></label>
                        <input asp-for="ShipToCity" class="form-control" />
                        <span asp-validation-for="ShipToCity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipToState" class="control-label"></label>
                        <input asp-for="ShipToState" class="form-control" />
                        <span asp-validation-for="ShipToState" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipToZip" class="control-label"></label>
                        <input asp-for="ShipToZip" class="form-control" />
                        <span asp-validation-for="ShipToZip" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <input asp-for="UserId" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipToAddress" class="control-label"></label>
                        <input asp-for="ShipToAddress" class="form-control" />
                        <span asp-validation-for="ShipToAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-info ml-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

        <div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
