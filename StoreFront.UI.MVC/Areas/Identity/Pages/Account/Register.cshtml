@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="offset-1">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-1">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Input.ShipToFirstName"></label>
                <input asp-for="Input.ShipToFirstName" class="form-control" autocomplete="ShipToFirstName" aria-required="true" />
                <span asp-validation-for="Input.ShipToFirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ShipToLastName"></label>
                <input asp-for="Input.ShipToLastName" class="form-control" autocomplete="ShipToLastName" aria-required="true" />
                <span asp-validation-for="Input.ShipToLastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ShipToAddress"></label>
                <input asp-for="Input.ShipToAddress" class="form-control" autocomplete="ShipToAddress" aria-required="true" />
                <span asp-validation-for="Input.ShipToAddress" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ShipToCity"></label>
                <input asp-for="Input.ShipToCity" class="form-control" autocomplete="ShipToCity" aria-required="true" />
                <span asp-validation-for="Input.ShipToCity" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ShipToState"></label>
                <input asp-for="Input.ShipToState" class="form-control" autocomplete="ShipToState" aria-required="true" />
                <span asp-validation-for="Input.ShipToState" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ShipToZip"></label>
                <input asp-for="Input.ShipToZip" class="form-control" autocomplete="ShipToZip" aria-required="true" />
                <span asp-validation-for="Input.ShipToZip" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
