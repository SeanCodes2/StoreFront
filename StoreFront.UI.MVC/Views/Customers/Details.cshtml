@model StoreFront.DATA.EF.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-8 offset-2">
        <h1>@Model.ShipToFirstName @Model.ShipToLastName Details</h1>

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToFirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToFirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToLastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToLastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToCity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToCity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToState)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToState)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToZip)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToZip)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShipToAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShipToAddress)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-warning">Edit</a> 
            <a asp-action="Index" class="btn btn-info ml-3">Back to List</a>
        </div>
    </div>
</div>