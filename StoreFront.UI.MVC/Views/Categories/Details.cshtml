@model StoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Details";
}


        <div class="row">
            <div class="col-8 offset-2">

                <h1>@Model.CategoryName Details</h1>

                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryName)
                        </dd>
